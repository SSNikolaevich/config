OPTIONS=name:Sergey
OPTIONS=boulder:0,color,menucolors,statushilites
OPTIONS=msg_window:reversed
OPTIONS=autopickup,pickup_types:$?!/
OPTIONS=showexp,time,showscore
OPTIONS=hitpointbar
OPTIONS=DECGraphics

# Set the number of messages saved into message history (^P -command)
OPTIONS=msghistory:50

MENUCOLOR=".* cursed .*"=red
MENUCOLOR=".* uncursed .*"=cyan
MENUCOLOR=".* unholy .*"=red
MENUCOLOR=".* blessed .*"=green
MENUCOLOR=".* holy .*"=green
MENUCOLOR=" cursed .* (being worn)"=orange&underline

MENUCOLOR="loadstone\|wand \(of\|called\) cancellation"=brown&underline
#MENUCOLOR="Amulet of Yendor named"=magenta      # color only the real Amulet
MENUCOLOR="gold piece"=yellow

#MENUCOLOR="[a-zA-Z] - [a-zA-Z ]+[ ]+[0-9]+\*[ ]+[a-z]+[ ]+[0-9]+%"=magenta  # forgotten spell
# This version will work on NAO.
